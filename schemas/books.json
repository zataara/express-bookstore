{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire JSON document.",
    "default": {},
    "examples": [
        {
            "isbn": "text",
            "amazon_url": "http://www.amazon.com",
            "author": "text",
            "language": "txt",
            "pages": 20,
            "publisher": "text",
            "title": "text",
            "year": 1990
        }
    ],
    "required": [
        "isbn",
        "amazon_url",
        "author",
        "language",
        "pages",
        "publisher",
        "title",
        "year"
    ],
    "properties": {
        "isbn": {
            "$id": "#/properties/isbn",
            "type": "string",
            "title": "The isbn schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "text"
            ]
        },
        "amazon_url": {
            "$id": "#/properties/amazon_url",
            "type": "string",
            "title": "The amazon_url schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "http://www.amazon.com"
            ]
        },
        "author": {
            "$id": "#/properties/author",
            "type": "string",
            "title": "The author schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "text"
            ]
        },
        "language": {
            "$id": "#/properties/language",
            "type": "string",
            "title": "The language schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "txt"
            ]
        },
        "pages": {
            "$id": "#/properties/pages",
            "type": "integer",
            "title": "The pages schema",
            "description": "An explanation about the purpose of this instance.",
            "default": 0,
            "examples": [
                20
            ]
        },
        "publisher": {
            "$id": "#/properties/publisher",
            "type": "string",
            "title": "The publisher schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "text"
            ]
        },
        "title": {
            "$id": "#/properties/title",
            "type": "string",
            "title": "The title schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "text"
            ]
        },
        "year": {
            "$id": "#/properties/year",
            "type": "integer",
            "title": "The year schema",
            "description": "An explanation about the purpose of this instance.",
            "default": 0,
            "examples": [
                1990
            ]
        }
    },
    "additionalProperties": true
}